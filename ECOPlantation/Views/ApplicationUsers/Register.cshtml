@model ECOPlantation.Models.ApplicationUser



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #191E29;
            color: white;
            margin: 0;
            padding: 0;
        }

        .box1 {
            background-color: #191E29;
            color: white;
            background-image: url('@Url.Content("~/images/statics/handd.png")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .box2 {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .underline-input {
            background-color: transparent; /* Make background transparent */
            border: none;
            border-bottom: 1px solid #01C38D;
            border-radius: 0;
            outline: none;
            box-shadow: none;
            color: white; /* Text color */
            margin-bottom: 4%;
        }
    </style>
    <title>Two Boxes</title>
</head>
<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 box1">
            <!-- Content for the first box -->
            <div class="">
                <h1 style="font-weight: 700; font-size: 60px;">WELCOME</h1>
                <p>We are a community, together to grow plant.</p>
            </div>
        </div>
        <div class="col-md-6 box2"  style="margin-top: -2%; ">
            <!-- Content for the second box -->
            <div class="container" >
                <h1 style="margin-left: 15%; font-weight: 700; font-size: 80px;">Get Started</h1>
                <p style="margin-left: 28%; margin-top: -3%;">Already have an account?
                        <a asp-action="Login" style="color: #01C38D; font-weight: 650;">Log in</a>
                </p>

                <div class="details" style=" ">
                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="FullName" class="control-label"></label>
                                <input asp-for="FullName" type="text" class="form-control underline-input" id="underlineTextField" placeholder="Name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" type="text" class="form-control underline-input" id="underlineTextField" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" type="text" class="form-control underline-input" id="underlineTextField" placeholder="Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNo" class="control-label"></label>
                                <input asp-for="PhoneNo" type="text" class="form-control underline-input" id="underlineTextField" placeholder="PhoneNo" />
                                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input type="password" asp-for="Password" type="text" class="form-control underline-input" id="underlineTextField" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input type="password" asp-for="ConfirmPassword" type="text" class="form-control underline-input" id="underlineTextField" placeholder="conform password">
                                
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-success float-end" style="margin-left: 40%;">Sign Up</button>

                            </div>
                        </form>
                    
         

                </div>
                
               

            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>

