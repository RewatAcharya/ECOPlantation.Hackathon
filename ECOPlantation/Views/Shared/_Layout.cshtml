<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECOPlantation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECOPlantation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>

        <div style="background-image: url('images\statics\img\image.png'); background-size: cover; background-position: center; background-repeat: no-repeat; font-family: 'Outfit', sans-serif;">

            <nav class="navbar navbar-expand-lg">
                <img src="~/images/Statics/img/logo.png" style="margin-left: 2%;" height='70px' width='80px' />
                <ul class="navbar-nav" style="margin-left: 30%;">
                    <li class="navbar-item">
                        <a class="nav-link" style="color: white" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="navbar-item">
                        <a class="nav-link" style="color: white" asp-controller="DonationRequests" asp-action="Index">Donate</a>
                    </li>
                    <li class="navbar-item">
                        <a class="nav-link" style="color: white" asp-controller="Invites" asp-action="Index">Community</a>
                    </li>
                    <li class="navbar-item">
                        <a class="nav-link" style="color: white" asp-controller="News" asp-action="Index">News</a>
                    </li>
                    <li class="navbar-item">
                        <a class="nav-link" style="color: white" href="">Expert</a>
                    </li>
                </ul>
                <div class="list-unstyled d-flex" style="margin-left: 20%;">
                    <li class="nav-item">
                        <a class="btn btn-success nav-link" style="color: white" asp-controller="ApplicationUsers" asp-action="Login">Login</a>
                    </li>
                </div>

            </nav>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 
    
    <div style="background-color: #191E29">
        <footer class="text-center text-lg-start text-white">
            <!-- Grid container -->
            <div class="container p-4">
                <!--Grid row-->
                <div class="row my-4">
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">

                        <div class="rounded-circle bg-white shadow-1-strong d-flex align-items-center justify-content-center mb-4 mx-auto" style="width: 150px; height: 150px;">
                            <img src="~/images/Statics/img/logo.png" height="70" alt=""
                                 loading="lazy" />
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-4">ECO PLANTATION</h5>

                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-paw pe-3"></i>Home</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-paw pe-3"></i>Donate</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-paw pe-3"></i>News</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-paw pe-3"></i>Expert</a>
                            </li>
                        </ul>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-4">Contact</h5>

                        <ul class="list-unstyled">
                            <li>
                                <p><i class="fas fa-map-marker-alt pe-2"></i>Itahari, Nepal</p>
                            </li>
                            <li>
                                <p><i class="fas fa-phone pe-2"></i>+977-9811224455 </p>
                            </li>
                            <li>
                                <p><i class="fas fa-envelope pe-2 mb-0"></i>ecoplantation@example.com</p>
                            </li>
                        </ul>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
                © 2024 Copyright:
                <a class="text-white" href="https://google.com/">ecoplantation.com</a>
            </div>
            <!-- Copyright -->
        </footer>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
