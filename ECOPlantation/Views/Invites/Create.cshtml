@using System.Security.Claims
@using ECOPlantation.Enums
@model ECOPlantation.Models.Invite

<style>
    .text-black {
        text-color: black;
    }
</style>

<form asp-action="Create">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title text-black" id="staticBackdropLabel">New News</h5>
            <button type="button" class="btn-close btn-danger" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Organiser" class="form-control" value="@User.FindFirstValue(ClaimTypes.Name)" hidden />
            <input asp-for="Status" class="form-control" value="@Status.UpComing.ToString()" hidden />

            <div class="form-group">
                <label asp-for="EventName" class="control-label text-black"></label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-black"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label text-black"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-white"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label text-black"></label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-white"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label text-black"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-white"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>
