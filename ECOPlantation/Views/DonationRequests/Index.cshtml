@model IEnumerable<ECOPlantation.Models.DonationRequest>

@{
    ViewData["Title"] = "Index";
}


<div class="row row-cols-1 row-cols-md-2 g-4 mt-2" style="margin-left: 10%">
    <div class="col">
        @foreach (var item in Model)
        {
            <div class="card" style="background-color: #CCEDE9; width: 80% ">
                <div class="card-body">
                    <h5 class="card-title">Plant Trees</h5>
                    <h3 class="card-text">From</h3>
                    <h1 class="card-text">@item</h1>
                    <h3 class="card-text">Dharan</h3>
                    <a href="" class="btn btn-primary">Join Event</a>
                </div>
            </div>
        }
    </div>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequestPhotoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestedUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/DonationRequest/@item.RequestPhotoURL" height="50px" weight="50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestedUser.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-route-Id="@item.Id" asp-action="Payments" asp-controller="DonationRequests" data-ajax="true" data-ajax-method="get" data-ajax-update="#page" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Provide Donation</a>

                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" id="page">
    </div>
</div>
